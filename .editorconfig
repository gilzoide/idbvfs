root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,cpp,h,hpp}]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8

[*.md]
indent_style = space
indent_size = 2

[CMakeLists.txt]
indent_style = space
indent_size = 2
